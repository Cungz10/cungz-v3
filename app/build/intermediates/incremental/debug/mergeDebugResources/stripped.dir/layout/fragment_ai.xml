<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_dark">
    <TextView
        android:id="@+id/ai_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Chat Assistant"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ai_chat_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/surface_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <EditText
            android:id="@+id/ai_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tanya apa ajaâ€¦ ðŸ’¬"
            android:background="@color/surface_light"
            android:textColor="@color/text_primary"
            android:padding="8dp"/>
        <ImageButton
            android:id="@+id/ai_send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_ai"
            android:background="@android:color/transparent"
            android:contentDescription="Kirim"/>
    </LinearLayout>
</LinearLayout>
